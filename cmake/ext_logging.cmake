# -----------------------------------------------------------------------------
# ext_log
# -----------------------------------------------------------------------------
# Log extcpp status message.
# -----------------------------------------------------------------------------
function(ext_log)
    message(STATUS "[extcpp] " ${ARGV})
endfunction(ext_log)

# -----------------------------------------------------------------------------
# ext_fatal
# -----------------------------------------------------------------------------
# Log extcpp message and terminate cmake run.
# -----------------------------------------------------------------------------
function(ext_fatal)
    message(FATAL_ERROR "[extcpp] " ${ARGV})
endfunction(ext_fatal)
